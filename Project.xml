<?xml version="1.0" encoding="utf-8"?>
<project>
	<app title="SwagEngine" file="SwagEngine" main="Main" package="com.UGH.SwagEngine" version="0.0.1" company="Sjoer van der Ploeg" />
	<app preloader="flixel.system.FlxPreloader" />
	
	<window width="1280" height="720" background="#000000" hardware="true" vsync="true" />
	<window if="web" orientation="portrait"  />
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="false" />
	<window if="mobile" orientation="landscape" fullscreen="true" width="0" height="0" />
	
	<set name="BUILD_DIR" value="export" />
	
	<classpath name="source" />
	
	<assets path="assets" exclude="icon.png" />

	<icon path="assets/icon.png" />	
	
	<haxelib name="flixel" />
	<haxelib name="flixel-addons" />
	<haxelib name="openfl-tiled-flixel" />
	<haxelib name="nape" />
	
	<haxedef name="FLX_NO_NATIVE_CURSOR" />
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />
</project>
